{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Get Object By ID",
    "description": "Get single object by its ID",
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "name": {
        "type": "string"
      },
      "data": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string"
          },
          "price": {
            "type": "string"
          },
          "cpu_model": {
            "type": "string"
          },
          "hard_disk_size": {
            "type": "string"
          },
          "capacity": {
            "type": "number"
          },
          "screen_size": {
            "type": "number"
          },
          "color": {
            "type": "string"
          }
        },
        "required": [
          "year",
          "price",
          "cpu_model",
          "hard_disk_size",
          "capacity",
          "screen_size",
          "color"
        ]
      }
    },
    "required": [
      "id",
      "name",
      "data"
    ]
  }  